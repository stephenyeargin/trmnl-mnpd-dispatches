<div class="view">
  <div class="layout layout--row">
    <div class="column">
      <table
        class="table table--condensed"
        id="dispatch-table"
        style="width:100%">
        <thead>
          <tr>
            <th style="width:5%">
              <span class="label label--medium">&nbsp;</span>
            </th>
            <th>
              <span class="label label--medium">Description</span>
            </th>
            <th style="width:15%">
              <span class="label label--medium">Received</span></th>
            <th>
              <span class="label label--medium">Location</span>
            </th>
            <th>
              <span class="label label--medium">Zone</span>
            </th>
          </tr>
        </thead>
        <tbody>
          {% for row in features, limit: 12 %}
          <tr>
            <td><span class="label label--small">{{ row.attributes.IncidentTypeCode }}</span></td>
            <td><span class="description">{{ row.attributes.IncidentTypeName }}</span></td>
            <td><span class="label label--small text--center">{{ row.attributes.CallReceivedTime | divided_by: 1000 | date: "%s" | plus: trmnl.user.utc_offset | date: '%l:%M %p' }}</span></td>
            <td><span class="label label--small">{{ row.attributes.Location }}</span></td>
            <td><span class="label label--small">{{ row.attributes.CityName }}</span></td>
          </tr>
          {% else %}
          <tr>
            <td colspan="5"><span class="label label--large py--40">No active incidents</span></td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
  <div class="title_bar">
    <img
      class="image"
      src="https://raw.githubusercontent.com/stephenyeargin/trmnl-dashboard/refs/heads/main/mnpd-dispatches/assets/mnpd.png"
      width="28"
      height="28">
    <span class="title">Metro Nashville Police Department Active Dispatches</span>
    <span class="instance">data.nashville.gov</span>
  </div>
</div>
